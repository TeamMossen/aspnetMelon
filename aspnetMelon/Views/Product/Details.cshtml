@model ProductDetailViewModel

<h1>@Model.Product.Name</h1>

<div class="thumbnail">
    <img alt="@Model.Product.Name" src="@Model.Product.ImageUrl" />
    <div class="caption-full">
        <h3 class="pull-right">@Model.Product.Price</h3>
        <h3>@Model.Product.Name"</h3>
        <p>@Model.Product.Description</p>
    </div>
    <div class="addToCart">
        <p class="button">
            <a class="btn btn-primary"
               asp-controller="ShoppingCart"
               asp-action="AddToShoppingCart"
               asp-route-productId="@Model.Product.ProductId">Add to Cart</a>
        </p>
    </div>
</div>

<h5 class="mb-1 mt-5">All Ratings and Reviews</h5>
@foreach (var review in Model.ProductReviews.Reviews)
{
    <div class="bg-white rounded shadow-sm p-4 mb-4 restaurant-detailed-ratings-and-reviews">
                    <hr>
                    <div class="reviews-members pt-4 pb-4">
                        <div class="media">
                            <div class="media-body">
                                <div class="reviews-members-header">
                                    <span class="star-rating float-right">
                                          <a href="#"><i class="icofont-ui-rating active"></i></a>
                                          <a href="#"><i class="icofont-ui-rating active"></i></a>
                                          <a href="#"><i class="icofont-ui-rating active"></i></a>
                                          <a href="#"><i class="icofont-ui-rating active"></i></a>
                                          <a href="#"><i class="icofont-ui-rating"></i></a>
                                          </span>
                                          <div class="float-right"><h4>@review.Rating/5 stars</h4></div>
                                    <h5 class="mb-1">@review.Author</h5>
                                    <p class="text-gray">@review.Date</p>
                                </div>
                                <div class="reviews-members-body">
                                    <h4>@review.Title</h4>
                                    <p>@review.Text</p>
                                </div>
                                <div class="reviews-members-footer">
                                    <p><b>@review.Location</b></p>
                                    <span class="total-like-user-main ml-2" dir="rtl">
                                          </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr>
</div>
}
