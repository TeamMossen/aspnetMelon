@model Infrastructure.Models.Dtos.ProductDto  

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <div class="thumbnail-image-container">
            <img src="@Model.ImageThumbnailUrl" alt="Product Image" class="thumbnail-img"/>
        </div>
        <div class="caption">
            <h3 class="display-6 product-title"><a asp-controller="Product" asp-action="Details" asp-route-id="@Model.ProductId" class="text-decoration-none link-dark">@Model.Name</a></h3>
            <h3 class="pull-right product-price">@Model.Price.ToString("c")</h3>
            <p class="lead product-description">@Model.Description</p>
        </div>
        <div class="addToCart mt-2">
            <p class="button">
                <a class="btn btn-primary"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-productId="@Model.ProductId">Add to Cart</a>
            </p>
        </div>
    </div>
</div>