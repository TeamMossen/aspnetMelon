@model OrderDto
@{
    ViewData["Title"] = "Order Detail";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-hover">
    <thead>
    <tr>
        <th>Order Id</th>
        <th>Total</th>
        <th>Placed</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td>
            @Model.OrderId
        </td>
        <td>
            @Model.OrderTotal kr
        </td>
        <td>
            @Model.OrderPlaced
        </td>
    </tr>
    </tbody>
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Address</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td>
            @Model.FirstName
        </td>
        <td>
            @Model.LastName
        </td>
        <td>
            @Model.Address
        </td>
    </tr>
    </tbody>
</table>
<tr/>

@foreach (var orderDetail in Model.OrderDetails)
{
    <div class="card rounded-3 mb-4">
        <div class="card-body p-4">
            <div class="row d-flex justify-content-between align-items-center">
                <div class="col-md-2 col-lg-2 col-xl-2">
                    <img
                        src="@orderDetail.product.ImageThumbnailUrl"
                        class="img-fluid rounded-3" alt="Cotton T-shirt">
                </div>
                <div class="col-md-3 col-lg-3 col-xl-3">
                    <p class="lead fw-normal mb-2">@orderDetail.product.Name</p>
@*                    <p><span class="text-muted">Size: </span>M <span class="text-muted">Color: </span>Grey</p>
*@                </div>
                <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                    <h5 class="mb-0">@orderDetail.Amount pcs</h5>
                </div>
                <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                    <h5 class="mb-0">@orderDetail.Price</h5>
                </div>
                <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                    <a href="#!" class="text-danger"><i class="fas fa-trash-alt fa-lg"></i></a>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

